@using HotelReservationApp.Models.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Zaloguj się do swojego konta!</h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float right" type="submit" value="Zaloguj" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Anuluj</a>
                    </div>
                </form>
                <div class="form-group">
                    <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Register">Zarejestruj się</a>
                </div>
            </div>
            
        </div>
    </div>
</div>