@model Room

@{
    ViewData["Title"] = "Room Details";
    var RoomID = Model.RoomID;
}

<h1>Room Details</h1>

<div class="card">
    <div class="card-header">
        <h2>Room @Model.RoomNumber - @Model.RoomType</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Cena za noc</dt>
            <dd class="col-sm-10">@Model.PricePerNight.ToString("C")</dd>

            <dt class="col-sm-2">Ilość osób</dt>
            <dd class="col-sm-10">@Model.Capacity</dd>
        </dl>

        <h3>Wyposażenie pokoju</h3>
        <div class="row">
            <div class="col-sm-6">
                <dl class="row">
                    <dt class="col-sm-4">Krzesła</dt>
                    <dd class="col-sm-8">@Model.RoomContents.Chairs</dd>

                    <dt class="col-sm-4">Łóżka</dt>
                    <dd class="col-sm-8">@Model.RoomContents.Beds</dd>

                    <dt class="col-sm-4">Biurka</dt>
                    <dd class="col-sm-8">@Model.RoomContents.Desks</dd>

                    <dt class="col-sm-4">Balkony</dt>
                    <dd class="col-sm-8">@Model.RoomContents.Balconies</dd>
                </dl>
            </div>
            <div class="col-sm-6">
                <dl class="row">
                    <dt class="col-sm-4">TV</dt>
                    <dd class="col-sm-8">@Model.RoomContents.TV</dd>

                    <dt class="col-sm-4">Lodówki</dt>
                    <dd class="col-sm-8">@Model.RoomContents.Fridge</dd>

                    <dt class="col-sm-4">Czasjniki</dt>
                    <dd class="col-sm-8">@Model.RoomContents.Kettle</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-primary" asp-action="Create" asp-controller="Reservations" asp-route-id="@Model.RoomID">Zarezerwuj</a>
        }
        else
        {
            <a class="btn btn-primary" asp-action="Login" asp-controller="Account">Zarezerwuj</a>
        }
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>

<style>
    .card {
        margin: 20px 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
        padding: 10px 15px;
    }

    .card-body {
        padding: 15px;
    }

    .card-footer {
        padding: 10px 15px;
        background-color: #f8f9fa;
        border-top: 1px solid #ddd;
        text-align: right;
    }
</style>
